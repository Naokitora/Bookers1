<h1 class="edit-h1">Editing Book</h1>
<% if @book.errors.any? %>
	<div class="error">
		<p class="error-title"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</p>
		<ul class="error-ul">
			<% @book.errors.full_messages.each do|message| %>
			<li class="error-li"><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>
<%= form_for(@book) do |f| %>
<div class="field">
	<%= f.label :title %><br>
	<%= f.text_field :title %>
</div>
<div class="field">
	<%= f.label :body %><br>
	<%= f.text_area :body %>
</div>
	<div class="submit">
		<%= f.submit 'Update Book' %>
	</div>
<div>
	<%= link_to "show", book_path(@book) %> | <%= link_to "Back", books_path %>
</div>
<% end %>
